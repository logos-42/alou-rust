{
  "mcpServers": {
    "payment-npm": {
      "command": "npx.cmd",
      "args": ["-y", "blockchain-payment-mcp"],
      "env": {
       
        "DEFAULT_NETWORK": "ethereum_mainnet",
        "DEBUG": "true",
        "LOG_LEVEL": "INFO",
        "MAX_TRANSACTION_VALUE": "10"
      }
    },
    "memory": {
      "command": "npx.cmd",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    }
  }
}