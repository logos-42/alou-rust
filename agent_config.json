{
  "deepseek": {
    "base_url": "https://api.deepseek.com",
    "api_key": "your-api-key-here",
    "model": "deepseek-chat",
    "max_tokens": 4000,
    "temperature": 0.7
  },
  "behavior": {
    "max_retries": 3,
    "timeout_seconds": 30,
    "verbose_logging": true,
    "tool_strategy": "Auto"
  },
  "workspace": {
    "directories": [
      "."
    ],
    "smart_detection": true,
    "exclude_patterns": [
      "target",
      "node_modules"
    ]
  }
}